generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int        @id @default(autoincrement())
  name     String?
  email    String     @unique
  password String
  chat     UserChat[]
}

model UserChat {
  userId Int
  user   User @relation(fields: [userId], references: [id])
  chatId Int
  chat   Chat @relation(fields: [chatId], references: [id])

  @@id([userId, chatId])
}

model Chat {
  id        Int        @id @default(autoincrement())
  userChats UserChat[]
  messages  Message[]
}

model Message {
  id      Int      @id @default(autoincrement())
  sentAt  DateTime @default(now())
  chatId  Int
  chat    Chat     @relation(fields: [chatId], references: [id])
  content String
}
